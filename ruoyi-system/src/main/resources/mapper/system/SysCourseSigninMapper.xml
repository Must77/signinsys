<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ruoyi.system.mapper.SysCourseSigninMapper">

    <!-- 课程签到结果映射 -->
    <resultMap id="SysCourseSigninResult" type="com.ruoyi.system.domain.SysCourseSignin">
        <id property="signinId" column="signin_id"/>
        <result property="courseId" column="course_id"/>
        <result property="deptId" column="dept_id"/>
        <result property="title" column="title"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="status" column="status"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectCourseSigninVo">
        SELECT cs.signin_id, cs.course_id, cs.dept_id, cs.title, cs.start_time, cs.end_time, cs.status, cs.create_by, cs.create_time, cs.update_by, cs.update_time,
               d.dept_name,
               c.course_name
        FROM sys_course_signin cs
        LEFT JOIN sys_dept d ON cs.dept_id = d.dept_id
        LEFT JOIN sys_dept_course c ON cs.course_id = c.course_id
    </sql>

    <!-- 根据ID查询 -->
    <select id="selectCourseSigninById" resultMap="SysCourseSigninResult">
        <include refid="selectCourseSigninVo"/>
        WHERE cs.signin_id = #{signinId}
    </select>

    <!-- 查询列表（条件可扩展） -->
    <select id="selectCourseSigninList" resultMap="SysCourseSigninResult">
        <include refid="selectCourseSigninVo"/>
        WHERE cs.del_flag = '0'
        <if test ="signinId != null and signinId != 0">
            AND cs.signin_id = #{signinId}
        </if>
        <if test="courseId != null and courseId != 0">
            AND cs.course_id = #{courseId}
        </if>
        <if test="deptId != null and deptId != 0">
            AND cs.dept_id = #{deptId}
        </if>
        <if test="title != null and title != ''">
            AND cs.title LIKE CONCAT('%', #{title}, '%')
        </if>
        <if test="status != null and status != ''">
            AND cs.status = #{status}
        </if>
        <if test="startTime != null">
            AND cs.start_time &gt;= #{startTime}
        </if>
        <if test="endTime != null">
            AND cs.end_time &lt;= #{endTime}
        </if>
        ORDER BY cs.create_time DESC
    </select>

    <!-- 新增签到 -->
    <insert id="insertCourseSignin" parameterType="com.ruoyi.system.domain.SysCourseSignin" useGeneratedKeys="true" keyProperty="signinId">
        INSERT INTO sys_course_signin(
            <if test="courseId != null">course_id,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="title != null">title,</if>
            <if test="startTime != null">start_time,</if>
            <if test="endTime != null">end_time,</if>
            <if test="status != null">status,</if>   
            create_time
        )VALUES(
            <if test="courseId != null">#{courseId},</if>
            <if test="deptId != null">#{deptId},</if>
            <if test="title != null">#{title},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="status != null">#{status},</if>   
            sysdate()
        )
    </insert>

    <!-- 修改签到 -->
    <update id="updateCourseSignin" parameterType="com.ruoyi.system.domain.SysCourseSignin">
        UPDATE sys_course_signin
        <set>
            <if test="courseId != null">course_id = #{courseId},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="title != null">title = #{title},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            update_time = sysdate()
        </set>
        WHERE signin_id = #{signinId}
    </update>

    <!-- 删除单条记录 未使用-->
    <!-- <delete id="deleteCourseSigninById" parameterType="Long">
        update sys_course_signin
        set del_flag = '2'
        where id = #{id}
    </delete> -->

    <!-- 批量删除 -->
    <delete id="deleteCourseSigninByIds" parameterType="Long">
        update sys_course_signin
        set del_flag = '2'
        where signin_id in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 更新签到状态 -->
    <update id="updateStatus">
        update sys_course_signin
        set status = #{status}, update_time = sysdate()
        where signin_id = #{signinId}
    </update>

</mapper>
