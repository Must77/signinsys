<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ruoyi.system.mapper.SysQuestionnaireItemMapper">

    <resultMap id="ItemResult" type="com.ruoyi.system.domain.SysQuestionnaireItem">
        <id property="quesItemId" column="ques_item_id"/>
        <result property="quesMetaId" column="ques_meta_id"/>
        <result property="questionText" column="question_text"/>
        <result property="itemType" column="item_type"/>
        <result property="orderNum" column="order_num"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="selectQuestionnaireItemById" resultMap="ItemResult">
        SELECT * FROM sys_questionnaire_item WHERE ques_item_id=#{quesItemId}
    </select>

    <select id="selectQuestionnaireItemList" resultMap="ItemResult">
        SELECT * FROM sys_questionnaire_item WHERE ques_meta_id=#{quesMetaId} ORDER BY order_num ASC
    </select>

    <insert id="insertQuestionnaireItem" parameterType="com.ruoyi.system.domain.SysQuestionnaireItem" useGeneratedKeys="true" keyProperty="quesItemId">
        INSERT INTO sys_questionnaire_item(ques_meta_id, question_text, item_type, order_num, create_by, create_time)
        VALUES (#{quesMetaId}, #{questionText}, #{itemType}, #{orderNum}, #{createBy}, NOW())
    </insert>

    <update id="updateQuestionnaireItem" parameterType="com.ruoyi.system.domain.SysQuestionnaireItem">
        UPDATE sys_questionnaire_item
        SET question_text=#{questionText}, item_type=#{itemType}, order_num=#{orderNum}, update_by=#{updateBy}, update_time=NOW()
        WHERE ques_item_id=#{quesItemId}
    </update>

    <delete id="deleteQuestionnaireItemById">
        DELETE FROM sys_questionnaire_item WHERE ques_item_id=#{quesItemId}
    </delete>

    <delete id="deleteQuestionnaireItemByMetaId">
        DELETE FROM sys_questionnaire_item WHERE ques_meta_id=#{quesMetaId}
    </delete>

</mapper>
